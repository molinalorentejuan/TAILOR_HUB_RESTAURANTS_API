{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true,

    "baseUrl": "./src",

    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],

    "types": ["node", "jest"],

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "include": [
    "src",
    "src/types"
  ],

  "exclude": []
}